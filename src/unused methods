 
    /**
     * Returns the first row/column/field where only one cell is empty (=0)
     * @param board Board
     * @return Int array, if there is no such column returns null
     */
    private static int[] getFirstSingle(Board board){
        int[] ret = new int[9];
        for(int i = 0; i < 9; i++){ //Check all rows
            ret = board.getRow(i);
            if(hasSingle(ret)){
                return ret;
            }
        }
        for(int i = 0; i < 9; i++){ //Check all columns
            ret = board.getColumn(i);
            if(hasSingle(ret)){
                return ret;
            }
        }
        for(int i = 0; i < 9; i++){ //Check all fields
            ret = board.getField(i);
            if(hasSingle(ret)){
                return ret;
            }
        }
        return null;
    }

